# ===========================================
# LightRAG Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to git!

# -------------------------------------------
# OpenAI Configuration
# -------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# -------------------------------------------
# LLM Settings
# -------------------------------------------
LLM_BINDING=openai
LLM_MODEL=gpt-4o-mini
LLM_BINDING_HOST=https://api.openai.com/v1

# -------------------------------------------
# Embedding Settings
# -------------------------------------------
EMBEDDING_BINDING=openai
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_BINDING_HOST=https://api.openai.com/v1
EMBEDDING_DIM=3072

# -------------------------------------------
# MongoDB Configuration
# -------------------------------------------
# For MongoDB Atlas:
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# For local MongoDB:
# MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=lightrag

# -------------------------------------------
# Neo4j Configuration
# -------------------------------------------
# For Neo4j Aura:
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
# For local Neo4j:
# NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# -------------------------------------------
# Server Settings
# -------------------------------------------
HOST=0.0.0.0
PORT=9621
TIMEOUT=300
WORKERS=1

# -------------------------------------------
# RAG Settings
# -------------------------------------------
SUMMARY_LANGUAGE=English, Vietnamese
CHUNK_SIZE=800
CHUNK_OVERLAP_SIZE=80
TOP_K=40
COSINE_THRESHOLD=0.2

# -------------------------------------------
# Storage Settings
# -------------------------------------------
# Options: JsonKVStorage, MongoKVStorage
KV_STORAGE=MongoKVStorage
# Options: NanoVectorDBStorage, MongoVectorDBStorage
VECTOR_STORAGE=MongoVectorDBStorage
# Options: NetworkXStorage, Neo4JStorage
GRAPH_STORAGE=Neo4JStorage
# Options: JsonDocStatusStorage, MongoDocStatusStorage
DOC_STATUS_STORAGE=MongoDocStatusStorage
